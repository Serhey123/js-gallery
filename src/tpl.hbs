
{{#each this}}
<li class="gallery-item">
 <div class="photo-card">
  <div class="gallery-img-wrapper">
    <img src={{webformatURL}} alt='{{tags}}' data-source="{{largeImageURL}}" width="260px" height="190px" class="gallery-img"/>
    <div class="overlay">
      <p class="stats-item overlay-stats-item">
        <i class="material-icons">visibility</i>
        {{views}}
      </p>
      <p class="stats-item overlay-stats-item">
        <i class="material-icons">cloud_download</i>
        {{downloads}}
      </p>
    </div>
  </div>
  <div class="stats">
    <p class="stats-item">
      <i class="material-icons">thumb_up</i>
      {{likes}}
    </p>
    <p class="stats-item">
      <i class="material-icons">comment</i>
      {{comments}}
    </p>
  </div>
 </div>
</li>
{{/each}}